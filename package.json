{
  "name": "actito-sdk-web",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "config",
      "configs/*",
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky",
    "build": "lerna run --scope @actito/* --scope actito-web build",
    "build:sample-app": "lerna run --scope sample-next build",
    "clean": "lerna run --scope @actito/* --scope actito-web clean",
    "dev": "lerna run --scope @actito/* --scope actito-web dev --parallel",
    "lint": "lerna run --scope @actito/* --scope actito-web lint",
    "sample-app": "lerna run --scope sample-next dev",
    "typecheck": "lerna run --scope @actito/* --scope actito-web typecheck"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "autoprefixer": "^10.4.15",
    "concurrently": "^9.2.0",
    "cssnano": "^6.0.1",
    "esbuild": "^0.25.8",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-s3-upload": "^1.7.3",
    "gulp-sourcemaps": "^3.0.0",
    "husky": "^9.1.7",
    "lerna": "^7.1.5",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.28",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.0.2",
    "rollup": "^4.44.2",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svg-import": "^3.0.0",
    "typescript": "^5.9.2"
  }
}
